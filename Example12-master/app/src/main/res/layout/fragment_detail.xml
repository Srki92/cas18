<?xml version="1.0" encoding="utf-8"?>



<Re xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_slika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_naziv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_slika"/>

    <TextView
        android:id="@+id/tv_opis"
        android:layour_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_slika"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_naziv"/>

    <Spinner
        android:id="@+id/sp_kategorija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_slika"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_cena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_slika"/>

    <TextView
        android:id="@+id/tv_kalorijskaVrednost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layour_toRightOf="@id/iv_slika"/>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="240dp"
        android:layour_height="wrap_content"
        android:layour_below="@id/tv_cena"
        android:layour_centerHorizontal="true"
        android:text="Buy"/>


</Re>